<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/widget54"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     android:background="@drawable/background2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    
    >

    <TableLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
  android:stretchColumns="1"
  android:id="@+id/add_note_tablelayout"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
     !com.google.ads.AdView 
                       android:id="@+id/adView"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       ads:adUnitId="a14e0e2eec61677"
                       ads:adSize="BANNER"
                       ads:loadAdOnCreate="true"
                       android:layout_alignParentTop="true"
                         />
	              <TableRow android:layout_weight="1"
	              android:id="@+id/add_note_newsubject" >
 				 <TextView
	            android:padding="3dip" android:text="Subject:   "/>
	            <EditText android:id="@+id/add_note_subjectadd" 
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:gravity="right"></EditText>
	              </TableRow>
	              <TableRow android:layout_weight="1"
	              android:id="@+id/add_note_viewsubject" >
 				 <TextView
	            android:padding="3dip" android:text="Subject:   "/>
	            <TextView android:id="@+id/add_note_subjectview" 
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:gravity="right"></TextView>
	              </TableRow>
	           	    	           
  <TableRow android:layout_weight="1">
	        
	        <TextView
	            android:padding="3dip" android:text="   "/>
	           
	    
</TableRow>

 
	        
	        <EditText android:layout_width="fill_parent" 
	        android:gravity="right" 
	        android:id="@+id/add_note_text" 
	        android:padding="3dip" 
	        android:layout_height="160dip" 
	        android:text=" "
	        ></EditText>
	 		<TextView android:id="@+id/add_note_showtext" 
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:gravity="left"></TextView>
	     
	<Button android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:id="@+id/add_note_button" 
	android:text="Add Note" 
	android:layout_weight="1"></Button>  
</TableLayout>
</ScrollView>